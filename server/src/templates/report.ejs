<html>
    <head>
        <style>
            table {
                font-family: Arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th{
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>

    <body>
        <h3 style="text-align: center">Cafe management system</h3>

        <!-- user details -->
        <table>
            <tr>
                <tr>Name: <%= name %></tr><br>
                <tr>Email: <%= email %></tr><br>
            </tr>
            <tr>
                <tr>Contact number: <%= contactNumber %></tr><br>
                <tr>Payment method: <%= paymentMethod %></tr><br>
            </tr>
        </table>

        <!-- product details -->
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>

            <%productDetails.forEach(product=>{%>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.price %></td>
                    <td><%= product.total %></td>
                </tr>
            <%})%>
        </table>

        <h3>Total: <%= totalAmount%></h3>
        <h3>Thank you for visiting. Visit again!></h3>
    </body>
</html>